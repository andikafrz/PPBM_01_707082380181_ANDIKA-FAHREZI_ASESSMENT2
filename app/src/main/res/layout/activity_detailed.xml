<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedActivity">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailName"
        android:text="Name"
        android:layout_marginTop="14dp"
        android:textSize="24sp"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">
    
        <ImageView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:id="@+id/detailImage"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/mercury_landscape" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~Description~"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merkurius merupakan planet terkecil di Tata Surya sekaligus yang terdekat dari Matahari. Periode revolusi planet ini merupakan yang terpendek dari semua planet di Tata Surya, yakni 87,79 hari."
        android:layout_marginStart="10dp"
        android:id="@+id/mercuryDesc"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukuran &amp; Massa"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Merkurius memiliki diameter sekitar 4.880 kilometer,
        \nmenjadikannya planet terkecil di tata surya.
        \n2. Massa Merkurius hanya sekitar 5,5 persen dari massa Bumi."
        android:layout_marginStart="10dp"
        android:id="@+id/detailukuranmassa"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atmosfer"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merkurius hampir tidak memiliki atmosfer. Kehadiran sedikit atmosfernya sebagian besar disebabkan oleh partikel yang dihasilkan dari aktivitas asteroid dan komet yang menabrak planet ini."
        android:layout_marginStart="10dp"
        android:id="@+id/detailatmosfer"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama &amp; Mitologi"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dinamai sesuai dengan dewa perjalanan dan dagang dalam mitologi Romawi, Merkurius."
        android:layout_marginStart="10dp"
        android:id="@+id/detailnamamitologi"
        android:textSize="16sp"/>


</LinearLayout>